<html>
{{#each foo}}
{{this}}
{{/each}}
<h3>Add new appointment</h3>
<form id="addappt" action="/appts" method="post">
    First name: <input type="text" name="fname"><br>
    Last name: <input type="text" name="lname"><br>
    Doctor: <select name="homeworld"> 
        {{#each planets}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    Age: <input type="number" name="age"><br>
    <input type="submit" value="Submit">
 </form>
<br/>

<form id='filter_appts' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Filter by doctor </label>
    <select id='homeworld_filter' name="homeworld"> 
        {{#each planets}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="button" value="Filter" onclick="filterApptsByHomeworld()">
</form>

<form id='search_appts' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search appointments with first name starting with:</label>
    <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
    <input type="button" value="Search" onclick="searchApptsByFirstName()">
</form>

<h3>Current appointments:</h3>
<table>
    <thead> 
        <th>Appointment Date</th>
        <th>Patient</th>
        <th>Doctor</th>
        <th>Assistant</th> 
        <th>Appointment Reason</th> 
        <th>Appointment Result</th>
        <th>Next Appointment Date</th>
        <th>Bill ID</th>  
    </thead> 
    <tbody>
        {{#each appts}} 
        <tr> 
            <td>{{appt_date}}</td> 
            <td>{{patient_id}}</td> 
            <td>{{doctor_id}}</td> 
            <td>{{assist_id}}</td>
            <td>{{appt_reason}}</td>
            <td>{{appt_result}}</td>
            <td>{{next_appt_date}}</td>
            <td>{{bill_id}}</td>
            <td><button onclick="deleteAppt({{id}})">Delete</button></td>
            <td><a href="/appts/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
