<html>
{{#each foo}}
{{this}}
{{/each}}
<h3>Add new appointment</h3>
<form id="addappt" action="/appts" method="post">
    Appointment Date: <input type="date" name="appt_date"><br>
    Patient: <input type="number" name="patient_id"><br>
    Doctor: <select name="doctor_id"> 
        {{#each doctor}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    Assistant: <select name="assist_id"> 
        {{#each assistant}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}<br>
    Appointment Reason <input type="text" name="appt_reason"><br>
    Appointment Result <input type="text" name="appt_result"><br>
    Next Appointment Date <input type="date" name="next_appt_date"><br>
    Bill ID  <input type="number" name="bill_id"><br>
    <input type="submit" value="Submit">
 </form>
<br/>

<form id='filter_appts' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Filter by doctor </label>
    <select id='doctor_filter' name="doctor"> 
        {{#each doctor}}
        <option value="{{id}}">{{name}}</option>
        {{/each}}
    </select><br>
    <input type="button" value="Filter" onclick="filterApptsByDoctor()">
</form>

<form id='search_appts' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search appointments with first name starting with:</label>
    <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
    <input type="button" value="Search" onclick="searchApptsByFirstName()">
</form>

<h3>Current appointments:</h3>
<table>
    <thead> 
        <th>Appointment Date</th>
        <th>Patient</th>
        <th>Doctor</th>
        <th>Assistant</th> 
        <th>Appointment Reason</th> 
        <th>Appointment Result</th>
        <th>Next Appointment Date</th>
        <th>Bill ID</th>  
    </thead> 
    <tbody>
        {{#each appts}} 
        <tr> 
            <td>{{appt_date}}</td> 
            <td>{{patient_id}}</td> 
            <td>{{doctor_id}}</td> 
            <td>{{assist_id}}</td>
            <td>{{appt_reason}}</td>
            <td>{{appt_result}}</td>
            <td>{{next_appt_date}}</td>
            <td>{{bill_id}}</td>
            <td><button onclick="deleteAppt({{id}})">Delete</button></td>
            <td><a href="/appts/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</html>
