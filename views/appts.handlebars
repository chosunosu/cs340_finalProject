<html>
{{#each foo}}
{{this}}
{{/each}}

<h3>Current appointments:</h3>
<table>
    <thead>
        <th>Appointment Date</th>
        <th>Patient ID</th>
        <th>Doctor</th>
        <th>Assistant ID</th>
        <th>Appointment Reason</th>
        <th>Appointment Result</th>
        <th>Next Appointment Date</th>
        <th>Bill ID</th>
    </thead>
    <tbody>
        {{#each appts}}
        <tr>
            <td>{{appt_date}}</td>
            <td>{{patient_id}}</td>
            <td>{{doctor_id}}</td>
            <td>{{assist_id}}</td>
            <td>{{appt_reason}}</td>
            <td>{{appt_result}}</td>
            <td>{{next_appt_date}}</td>
            <td>{{bill_id}}</td>
            <td><button onclick="">Delete</button></td>
            <td><a href="">Update</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
</html>
